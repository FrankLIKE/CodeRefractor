<Window x:Class="VisualCompiler.Views.Dialogs.CompilerOptionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dialogs="clr-namespace:VisualCompiler.Views.Dialogs"
        Title="CompilerOptionsWindow" Height="300" Width="300">
    <Window.DataContext>
        <dialogs:CompilerOptionsViewModel />
    </Window.DataContext>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <GroupBox Header="OptimizationList">
            <ListBox ItemsSource="{Binding OptimizationList}" x:Name="ListBox"></ListBox>
        </GroupBox>
        <UniformGrid HorizontalAlignment="Right" Grid.Row="1" Rows="1">
            <Button Click="OnOk" Margin="4">OK</Button>
            <Button Click="OnCancel" Margin="4">Cancel</Button>

        </UniformGrid>
    </Grid>
</Window>
